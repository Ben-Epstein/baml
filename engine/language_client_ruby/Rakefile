require "bundler/gem_tasks"
require "rake/testtask"
require "rb_sys/extensiontask"
require "rb_sys/toolchain_info"

GEMSPEC_PATH = "baml.gemspec"
GEMSPEC = Gem::Specification.load(GEMSPEC_PATH) || abort("Could not load #{GEMSPEC_PATH}")

task default: :test

RbSys::ExtensionTask.new("baml", GEMSPEC) do |ext|
  ext.lib_dir = "lib/baml"
  #ext.cross_compile = true
  #ext.cross_platform = %w[x86_64-linux-gnu]
  #ext.cross_platform = ["x86_64-linux", "x86_64-darwin", "arm64-darwin", "x64-mingw-ucrt"]
end

