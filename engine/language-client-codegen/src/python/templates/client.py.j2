        {
          {% for (name, _) in fn.args -%}
          "{{name}}": {{name}},
          {%- endfor %}
        },
        ctx={}
      )
      return BamlOutputWrapper[{{ fn.return_type }}].coerce("{{fn.name}}", raw.parsed())
    {% endfor %}

